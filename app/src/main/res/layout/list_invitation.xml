<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_margin="5dp"
    android:layout_marginBottom="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="120dp">
            <ImageView
                android:id="@+id/inv_img_card"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:src="@color/colorAccent"/>

            <RelativeLayout
                android:id="@+id/layout_detail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:layout_marginStart="15pt"
                android:layout_marginEnd="5pt"
                android:layout_toRightOf="@+id/inv_img_card">

                <TextView
                    android:id="@+id/inv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Judul Kegiatan"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/inv_admin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/inv_title"
                    android:text="By Admin Jurusan" />

                <TextView
                    android:id="@+id/inv_tgl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/inv_admin"
                    android:text="20 Mei 2018 19:00"
                    android:textStyle="bold" />
            </RelativeLayout>
        </RelativeLayout>
    <View
        android:layout_marginLeft="130dp"
        android:layout_below="@id/layout_detail"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="-20dp"
        android:background="@color/common_google_signin_btn_text_light_default" />


</LinearLayout>