<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

        <RelativeLayout
            android:layout_margin="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/img_member"
                android:src="@drawable/polinema_logo"
                app:civ_border_width="1sp"
                app:civ_border_color="@color/cardview_dark_background"
                android:layout_width="40dp"
                android:layout_height="40dp" />

            <TextView
                android:id="@+id/name_member"
                android:layout_marginStart="10dp"
                android:text="Nama"
                android:textStyle="bold"
                android:layout_toRightOf="@id/img_member"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/date_time"
                android:text="56 min ago"
                android:layout_marginTop="2dp"
                android:textSize="12dp"
                android:layout_below="@id/name_member"
                android:layout_toRightOf="@id/img_member"
                android:layout_marginStart="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/comment_member"
                android:layout_toRightOf="@id/date_time"
                android:layout_marginStart="5dp"
                android:layout_below="@id/name_member"
                android:text="Komentar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
</LinearLayout>